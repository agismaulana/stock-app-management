<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/suppliers">Suplier</a></li>
    <li class="breadcrumb-item active" aria-current="page">Data Tables</li>
  </ol>
</nav>

<!-- Flash Message -->
<div class="my-2">
  <% if (messages && messages.length > 0) { %>
  <div class="alert alert-success" role="alert">
    <% messages.forEach(message => { %>
    <div><%= message %></div>
    <% }); %>
  </div>
  <% } %>
</div>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <a href="/suppliers/create" class="btn btn-primary">Tambah Supplier</a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Telepon</th>
            <th>Alamat</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% suppliers.forEach((supplier, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= supplier.name %></td>
            <td><%= supplier.telepon %></td>
            <td><%= supplier.alamat %></td>
            <td>
              <a href="/suppliers/<%= supplier.id %>/edit" class="btn btn-sm btn-info">Edit</a>
              <a href="/suppliers/<%= supplier.id %>/destroy" class="btn btn-sm btn-danger">Hapus</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
