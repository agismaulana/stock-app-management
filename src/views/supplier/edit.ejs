<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/suppliers">Suplier</a></li>
      <li class="breadcrumb-item"><a href="/suppliers">Data Tables</a></li>
      <li class="breadcrumb-item active" aria-current="page">Edit Suplier</li>
    </ol>
  </nav>
  
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Edit Suplier</h6>
    </div>
    <div class="card-body">
      <form action="/suppliers/<%= supplier.id %>/update" method="POST">
        <div class="form-group">
          <label for="name">Nama Suplier</label>
          <input 
            type="text" 
            name="name" 
            id="name" 
            class="form-control" 
            value="<%= supplier.name %>" 
            placeholder="Masukkan nama suplier" 
            required 
          />
        </div>
        <div class="form-group">
          <label for="telepon">Telepon</label>
          <input 
            type="text" 
            name="telepon" 
            id="telepon" 
            class="form-control" 
            value="<%= supplier.telepon %>" 
            placeholder="Masukkan nomor telepon" 
            required 
          />
        </div>
        <div class="form-group">
          <label for="alamat">Alamat</label>
          <textarea 
            name="alamat" 
            id="alamat" 
            class="form-control" 
            rows="3" 
            placeholder="Masukkan alamat lengkap" 
            required
          ><%= supplier.alamat %></textarea>
        </div>
        <div class="form-group">
          <label for="user_id">User</label>
          <select 
            name="user_id" 
            id="user_id" 
            class="form-control" 
            required
          >
            <% users.forEach(user => { %>
            <option value="<%= user.id %>" <%= user.id == supplier.user_id ? 'selected' : '' %>>
              <%= user.username %>
            </option>
            <% }); %>
          </select>
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-primary btn-block">Simpan</button>
        </div>
      </form>
    </div>
  </div>
  