<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/gudangs">Gudang</a></li>
    <li class="breadcrumb-item"><a href="/gudangs">Data Tables</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Gudang</li>
  </ol>
</nav>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Edit Gudang</h6>
  </div>
  <div class="card-body">
    <form action="/gudangs/<%= gudang.id %>/update" method="POST">
      <div class="form-group">
        <label for="name" class="form-label">Nama Gudang</label>
        <input type="text" name="name" id="name" class="form-control" value="<%= gudang.name %>" placeholder="Masukkan nama gudang" required />
      </div>
      <div class="form-group">
        <label for="telepon" class="form-label">Telepon</label>
        <input type="text" name="telepon" id="telepon" class="form-control" value="<%= gudang.telepon %>" placeholder="Masukkan nomor telepon" required />
      </div>
      <div class="form-group">
        <label for="alamat" class="form-label">Alamat</label>
        <textarea name="alamat" id="alamat" class="form-control" rows="4" placeholder="Masukkan alamat lengkap" required><%= gudang.alamat %></textarea>
      </div>
      <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-block">Update</button>
      </div>
    </form>
  </div>
  <div class="card-footer text-center">
    <small class="text-muted">Pastikan data yang diisi sudah benar.</small>
  </div>
</div>
