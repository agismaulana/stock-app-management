<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/gudangs">Gudang</a></li>
    <li class="breadcrumb-item"><a href="/gudangs">Data Tables</a></li>
    <li class="breadcrumb-item active" aria-current="page">Tambah Gudang</li>
  </ol>
</nav>

<div class="my-2">
  <% if (messages && messages.length > 0) { %>
  <div class="alert alert-success" role="alert">
    <% messages.forEach(message => { %>
    <div><%= message %></div>
    <% }); %>
  </div>
  <% } %>
</div>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Tambah Gudang</h6>
  </div>
  <div class="card-body">
    <form action="/gudangs/store" method="POST">
      <div class="form-group">
        <label for="name">Nama Gudang</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Masukkan nama gudang" required />
      </div>
      <div class="form-group">
        <label for="telepon">Nomor Telepon</label>
        <input type="text" name="telepon" id="telepon" class="form-control" placeholder="Masukkan nomor telepon" required />
      </div>
      <div class="form-group">
        <label for="alamat">Alamat Lengkap</label>
        <textarea name="alamat" id="alamat" class="form-control" rows="3" placeholder="Masukkan alamat lengkap" required></textarea>
      </div>
      <div class="form-group">
        <label for="isActive" class="form-label">Aktif</label>
        <select name="isActive" id="isActive" class="form-control">
          <option>-- Pilih Status --</option>
          <option value="1">Aktif</option>
          <option value="0">Tidak Aktif</option>
        </select>
      </div>
      <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-block">Simpan</button>
      </div>
    </form>
  </div>
  <div class="card-footer text-center">
    <small class="text-muted">Pastikan data yang diisi sudah benar sebelum disimpan.</small>
  </div>
</div>
