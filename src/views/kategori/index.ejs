
<div class="content-page">
    <div class="content">
        <h1>Kategori</h1>

        <a href="/kategories/create" class="btn btn-primary">Tambah Kategori</a>

        <% if (messages.length > 0) { %>
            <div class="flash-messages">
                <% messages.forEach(message => { %>
                <div class="flash-message">
                    <%= message %>
                </div>
                <% }); %>
            </div>
        <% } %>


        <table border="1" cellpadding="5">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% kategories.forEach((kategori, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= kategori.name %></td>
                        <td>
                            <a href="/kategories/<%= kategori.id %>/edit" class="btn btn-warning">Edit</a>
                            <a href="/kategories/<%= kategori.id %>/destroy" class="btn btn-danger">Hapus</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>