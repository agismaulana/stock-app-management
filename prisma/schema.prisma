generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Role {
    id          Int    @id @default(autoincrement())
    name        String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    User User[]
}

model User {
    id          Int    @id @default(autoincrement())
    username    String @unique
    email       String @unique
    password    String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    role        Role  @relation(fields: [roleId], references: [id])
    roleId      Int

    Pengawas Pengawas?

    Supplier Supplier?
}

model Kategori {
    id          Int    @id @default(autoincrement())
    name        String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    Barang Barang[]
}

model Barang {
    id          Int    @id @default(autoincrement())
    name        String
    stock       Decimal @db.Decimal(4, 0)
    harga       Decimal @db.Decimal(10, 2)
    deskripsi   String?
    berat       String?
    tipe        String?
    banyak      Decimal? @db.Decimal(4, 0)
    photo       String
    sale_price  Decimal @db.Decimal(10, 2)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    Supplier Supplier? @relation(fields: [supplierId], references: [id])
    supplierId Int?

    Gudang Gudang? @relation(fields: [gudangId], references: [id])
    gudangId Int?

    TransaksiDetail TransaksiDetail[]

    Kategori Kategori @relation(fields: [kategoriId], references: [id])
    kategoriId Int

    MutasiStok MutasiStok[]
}

model Gudang {
    id          Int    @id @default(autoincrement())
    name        String 
    alamat      String
    telepon     String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    isActive    Boolean @default(true)

    Transaksi Transaksi[]

    MutasiStok MutasiStok[]

    Barang Barang[]

    Pengawas Pengawas[]
}

model Supplier {
    id          Int    @id @default(autoincrement())
    name        String
    alamat      String
    telepon     String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    User User @relation(fields: [userId], references: [id])
    userId Int @unique

    Barang Barang[]
}

model Transaksi {
    id          Int    @id @default(autoincrement())
    total       Decimal @db.Decimal(10, 2)
    tanggal     DateTime
    gudang      Gudang @relation(fields: [gudangId], references: [id])
    gudangId    Int
    pengawas    Pengawas @relation(fields: [pengawasId], references: [id])
    pengawasId  Int
    status      String
    keterangan  String
    typeTransaksi String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    TransaksiDetail TransaksiDetail[]
}

model TransaksiDetail {
    uuid        String @unique
    transaksi   Transaksi @relation(fields: [transaksiId], references: [id])
    transaksiId Int
    barang      Barang @relation(fields: [barangId], references: [id])
    barangId    Int
    jumlah      Decimal @db.Decimal(4, 0)
    harga       Decimal @db.Decimal(10, 2)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model Pengawas {
    id          Int    @id @default(autoincrement())
    name        String
    alamat      String
    telepon     String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    user        User @relation(fields: [userId], references: [id])
    userId      Int @unique

    gudang      Gudang? @relation(fields: [gudangId], references: [id])
    gudangId    Int?

    Transaksi Transaksi[]
}

model MutasiStok {
    id          Int    @id @default(autoincrement())
    barang      Barang @relation(fields: [barangId], references: [id])
    barangId    Int
    gudang      Gudang @relation(fields: [gudangId], references: [id])
    gudangId    Int
    jumlah      Decimal @db.Decimal(4, 0)
    harga       Decimal @db.Decimal(10, 2)
    keterangan  String
    tanggal     DateTime
    typeMutasi  String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}